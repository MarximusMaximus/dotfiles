#!/usr/bin/env sh

git init .
cp "$HOME"/.gitignore-base .gitignore
git add .gitignore
cp "$HOME"/LICENSE-DEFAULT LICENSE || touch LICENSE
git add LICENSE
cp "$HOME"/README_DEFAULT.md README.md || touch README.md
git add README.md
mkdir -p .vscode
cp "$HOME"/.vscode-settings-base.json .vscode/settings.json
git add .vscode/settings.json
